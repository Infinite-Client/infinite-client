[
  {
    "label": "Infinite Client: Build Jar",
    "command": "./gradlew build",
    "use_new_terminal": true,
  },
  {
    "label": "Infinite Client: Build Rust",
    "command": "./gradlew buildRustAll --rerun-tasks",
    "use_new_terminal": true,
  },
  {
    "label": "Infinite Client: Run Client",
    "command": "./gradlew runClient",
    "use_new_terminal": true,
  },
  {
    "label": "Infinite Client: Format",
    "command": "./gradlew spotlessApply && cd rust/infinite-client && cargo fmt",
    "use_new_terminal": true,
  },
]
